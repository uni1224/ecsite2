<div class="container">
  <div class="row mt-4">
    <div class="col-md-3 col-sm-3">
       <h4 class="ml-5 mb-5"><span class="title-custom px-4">商品一覧</span></h4>

        </div>
        <div class="col-2 justify-content-end">
         <%= link_to "追加",new_admin_item_path, class: "btn btn-outline-primary" %>
          </div>
<table class= 'table table-hover table-inverse'>
    <thead>
        <tr>
            <th></th>
            <th>商品名</th>
            <th>価格</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td>
                <%#= image_tag item.image, size: '250x280', class: 'shadow p-3 mb-5 bg-white', style: 'margin:auto;' %>
            </td>
            <td><%= link_to item.name,admin_item_path(item) %></td>
            <td>￥<%#= item.price.to_s(:delimited) %></td>
            <td><%#= item.genre.name %></td>
            <td></td>
            <% end %>
        </tr>
    </tbody>
</table>
 </div>


 </div>