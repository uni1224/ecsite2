<%= form_with model: @item, url: admin_items_path do |f| %>
<h4 class= 'ml-5 mb-5'>新規商品登録</h4>
<table class= 'table table-borderless'>
    <tr>
        <td>商品画像</td>
        <td><%= f.text_field :image, accept: 'image/*' %></td>
    </tr>
    <tr>
        <td>商品名</td>
        <td><%= f.text_field :name, placeholder:'商品名を入力してください', class: 'form-control' %></td>
    </tr>
    <tr>
        <td>商品説明</td>
        <td><%= f.text_field :description, placeholder: '商品説明を入力してください', class: 'form-control' %></td>
    </tr>
    <tr>
        <td>ジャンル</td>
        <td><%#= f.collection_select :genre_id, Genre.all, ;id, :name, include_blank: '選択してください' %></td>
    </tr>
    <tr>
        <td>税抜き価格</td>
        <td><%= f.text_field :price, placeholder: '金額を入力してください', class: 'form-control' %></td>
    </tr>
    <tr>
        <td>販売ステータス</td>
        <td></td>
    </tr>
    <td><%= f.submit '商品登録', class: 'btn btn-info' %></td>
</table>
<% end %>